@model IEnumerable<TeamCalendarApp.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}

<div class="container">
    <div style="width:90%; margin: 0 auto;">
        <table id="departmentsTable" class="table table-striped table-bordered nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Department Id</th>
                    <th>Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#departmentsTable').DataTable({
                processing: true,
                serverSide: true,
                filter: true,
                orderMulti: false,
                columnDefs: [{
                    targets: [0],
                    visible: false,
                    searchable: false
                }],
                columns: [
                    { data: "DepartmentId", name: "DepartmentID", autoWidth: true },
                    { data: "Name", name: "Name", autoWidth: true },
                    {
                        render: function (data, type, full, met) {
                            return '<a class="btn btn-info" href="/Departments/Edit/"' + full.DepartmentId + '">Edit</a>';
                        }
                    },
                    {
                        data: null, render: function (data, type, row) {
                            return "<a href='#' class='btn btn-danger' onclick=deleteData('" + row.DepartmentId + "');>Delete</a>";
                        }
                    }
                ]
            });
        });
    </script>
}